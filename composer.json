{
  "name": "szwtdl/easypay",
  "description": "payment paypal stripe paddle alipay wechat",
  "keywords": [
    "paddle",
    "stripe",
    "paypal",
    "AsiaBill",
    "alipay",
    "wechat"
  ],
  "type": "libray",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "szwtdl",
      "email": "szpengjian@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-bcmath": "*",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "stripe/stripe-php": "^9.4",
    "nesbot/carbon": "^2.62",
    "guzzlehttp/guzzle": "^7.5",
    "psr/container": "^2.0",
    "pimple/pimple": "^3.5"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.10",
    "mockery/mockery": "^1.4.4",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": "^9.5",
    "jetbrains/phpstorm-attributes": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "EasyPay\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "EasyPay\\ServiceProvider"
      ]
    },
    "hooks": {
      "pre-commit": [
        "composer check-style",
        "composer test"
      ],
      "pre-push": [
        "composer check-style"
      ]
    }
  },
  "scripts": {
    "check-style": "php-cs-fixer fix --using-cache=no --diff --dry-run --allow-risky=yes --ansi",
    "fix-style": "php-cs-fixer fix --using-cache=no --allow-risky=yes --ansi",
    "test": "phpunit --colors"
  },
  "minimum-stability": "stable"
}
